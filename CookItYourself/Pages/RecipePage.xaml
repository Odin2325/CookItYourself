<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:CookItYourself.ViewModels"
             xmlns:models="clr-namespace:CookItYourself.Models"
             x:Class="CookItYourself.Pages.RecipePage"
             x:DataType="viewmodels:RecipeViewModel"
             Title="Recipes">

    <VerticalStackLayout Padding="20" Spacing="10">

        <Label Text="Add a New Recipe"
               FontAttributes="Bold"
               FontSize="18"/>

        <Entry Placeholder="Recipe name"
               Text="{Binding NewRecipeName}" />

        <Editor Placeholder="Cuisine"
            AutoSize="TextChanges"
            HeightRequest="80"
            Text="{Binding NewRecipeCuisine}" />

        <Editor Placeholder="Description"
                AutoSize="TextChanges"
                HeightRequest="80"
                Text="{Binding NewRecipeDescription}" />

        <Button Text="Add Recipe"
                Clicked="OnAddRecipeClicked" />

        <Label Text="All Recipes"
               FontAttributes="Bold"
               FontSize="18"
               Margin="0,20,0,0"/>

        <CollectionView ItemsSource="{Binding Recipes}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Recipe">
                    <Frame BorderColor="LightGray" Padding="10" Margin="0,5">
                        <VerticalStackLayout>
                            <Label Text="{Binding Name}" FontAttributes="Bold" />
                            <Label Text="{Binding Cuisine}" FontSize="12" />
                            <Label Text="{Binding Description}" FontSize="12" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
